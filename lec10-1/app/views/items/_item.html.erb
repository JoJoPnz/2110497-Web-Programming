<div id="<%= dom_id item %>">
  <p>
    <strong>User:</strong>
    <%= item.user_id %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= item.price %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= item.name %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= item.stock %>
  </p>

  <% if(item.picture.attached?) %>
    <p>
      <strong>Picure:</strong>
      <%= image_tag item.picture.variant(:thumb75) %>
    </p>
  <% end %>

</div>
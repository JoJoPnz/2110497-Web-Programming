<%= form_for @item do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:" %>
      </h2>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if(session[:logged_in] == true) %>
    <div class="field">
      <%= f.hidden_field :user_id, value: session[:login_user_id] %>
    </div>
  <% else %>
    <div class="field">
      <%= f.label :user_id %>
      <%= f.text_field :user_id %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :stock %>
    <%= f.number_field :stock %>
  </div>
  <div class="actions">
    <%= f.submit 'Save' %>
  </div>
<% end %>
<style>
table, th, td {
  border:1px solid black;
}
</style>

<table>
    <th>Subject</th>
    <th>Score</th>
    <th>Edit</th>
    <th>Delete</th>
    <% @allSubjects.each do |s| %>
        <tr>
            <td><%= s.name %></td>
            <td><%= s.score %></td>
            <td><%= link_to 'EDIT', '/score/edit?id=' + s.id.to_s %></td>
            <td><%= link_to 'DELETE', :controller => 'main', :action => 'deleteSubject', :id => s.id %></td>
        </tr>
    <% end %>
</table>


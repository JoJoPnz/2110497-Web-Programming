<%= form_with url: "/score/save?id=" + @id.to_s, method: :post, data: {turbo: false} do |form| %>
    <%= form.label :query, "Subject Name : #{@name}" %>
    <br>
    <%= form.label :query, "Subject Score : #{@score}" %>
    <br>
    <%= form.label :query, "New Name" %>
    <%= form.text_field :subject, name: "name", required: true %>
    <br>
    <%= form.label :query, "New Score" %>
    <%= form.number_field :score, in: 0..100, name: "score", required: true %>
    <br>
    <%= form.submit "Save" %>
<% end %>

<%= link_to 'Back', '/score/list' %>
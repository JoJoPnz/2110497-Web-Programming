<style>
table, th, td {
  border:1px solid black;
}
</style>

<p> Average Score : <%= @averageScore %> </p>
<p> Max Subject : <%= @maxSubject %> </p>

<table>
    <th>Subject</th>
    <th>Point</th>
    <th>Grade</th>
    <th>Edit</th>
    <th>Delete</th>
    <% @student.scores each do |s| %>
        <tr>
            <td><%= s.subject %></td>
            <td><%= s.point %></td>
            <td><%= s.grade %></td>
            <td><%= link_to 'EDIT', '/scores/' + s.id + '/edit' %></td>
            <td><%= button_to "DELETE", s, method: :delete %></td>
        </tr>
    <% end %>
</table>
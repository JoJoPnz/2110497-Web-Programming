<style>
table, th, td {
  border:1px solid black;
}
</style>

<p> Average Score : <%= @averageScore %> </p>
<p> Max Subject : <%= @maxSubject %> </p>
<table>
    <th>Subject</th>
    <th>Point</th>
    <th>Grade</th>
    <% if session[:logged_in] %>
        <th>Edit</th>
    <% end %>
    <th>Delete</th>
    <% @student.scores.each do |score| %>
        <tr>
            <td><%= score.subject %></td>
            <td><%= score.point %></td>
            <td><%= score.grade %></td>
            <% if session[:logged_in] %>
                <td><%= link_to 'EDIT', '/scores/' + score.id.to_s + '/edit' %></td>
            <% end %>
            <td><%= button_to "DELETE", score, method: :delete %></td>
        </tr>
    <% end %>
</table>
<%= link_to 'ADD', '/scores/new' %>
<br>
<%= link_to 'BACK', '/students/' + @student.id.to_s %>